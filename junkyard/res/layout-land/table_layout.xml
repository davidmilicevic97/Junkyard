<?xml version="1.0" encoding="utf-8"?>
<HorizontalScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/locationsFragmentHorizontalScrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <TableRow>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="5dp" >

                <ImageView
                    android:id="@+id/imageVeiwNearest"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:scaleType="fitXY" />

                <TextView
                    android:id="@+id/tvNearest"
                    style="@style/GridStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|bottom"
                    android:padding="12dp"
                    android:text="@string/locationsfragment_nearest" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="5dp" >

                <ImageView
                    android:id="@+id/imageVeiwFavs"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:scaleType="fitXY" />

                <TextView
                    android:id="@+id/tvFavs"
                    style="@style/GridStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|bottom"
                    android:padding="12dp"
                    android:text="@string/locationsfragment_favs" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="5dp" >

                <ImageView
                    android:id="@+id/imageVeiwList"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:scaleType="fitXY" />

                <TextView
                    android:id="@+id/tvList"
                    style="@style/GridStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|bottom"
                    android:padding="12dp"
                    android:text="@string/locationsfragment_list" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="5dp" >

                <ImageView
                    android:id="@+id/imageVeiwMap"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:scaleType="fitXY" />

                <TextView
                    android:id="@+id/tvMap"
                    style="@style/GridStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|bottom"
                    android:padding="12dp"
                    android:text="@string/locationsfragment_map" />
            </FrameLayout>
        </TableRow>
    </TableLayout>

</HorizontalScrollView>