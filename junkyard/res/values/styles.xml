<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="@android:style/Theme.Holo.Light">
        <item name="android:actionBarStyle">@style/BlueActionBar</item>
        <item name="android:actionOverflowButtonStyle">@style/BlueOverflowTheme</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_ab_back_holo_light</item>
        <item name="android:itemTextAppearance">@style/BlueActionBarOverflowMenuText</item>
        <item name="android:itemBackground">@color/blue</item>
    </style>

    <style name="BlueActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@color/blue</item>
        <item name="android:titleTextStyle">@style/BlueActionBarTitleText</item>
        <item name="android:logo">@drawable/action_bar_icon</item>
    </style>

    <style name="BlueActionBarTitleText" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="BlueActionBarOverflowMenuText" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="BlueOverflowTheme" parent="@android:style/Widget.Holo.Light.ActionButton.Overflow">
        <item name="android:src">@drawable/ic_action_overflow</item>
    </style>

    <style name="AppThemeWithGreenActionBar" parent="@android:style/Theme.DeviceDefault">
        <item name="android:actionBarStyle">@style/GreenActionBar</item>
        <item name="android:itemBackground">@color/beige</item>
    </style>

    <style name="GreenActionBar" parent="@android:style/Widget.DeviceDefault.ActionBar">
        <item name="android:background">@color/green</item>
        <item name="android:titleTextStyle">@style/GreenActionBarTitleText</item>
    </style>

    <style name="GreenActionBarTitleText" parent="@android:style/TextAppearance.DeviceDefault.Widget.ActionBar.Title">
        <item name="android:textColor">@color/beige</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="CodeFont" parent="@android:style/TextAppearance.DeviceDefault">
        <item name="android:textColor">#000000</item>
        <item name="android:background">#00FFFFFF</item>
    </style>

    <style name="BeigeTextView" parent="@android:style/TextAppearance.DeviceDefault">
        <item name="android:textColor">@color/beige</item>
    </style>

    <style name="GridStyle" parent="@android:style/TextAppearance.DeviceDefault">
        <item name="android:textSize">32sp</item>
    </style>

    <style name="PreferencesActivityStyle" parent="@android:style/Theme.Holo.Light">
        <item name="android:actionBarStyle">@style/BlueActionBar</item>
    </style>

    <style name="PreferencesStyle" parent="@style/AppThemeWithGreenActionBar">
        <item name="android:listViewStyle">@style/PreferencesListViewStyle</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textColorSecondary">@android:color/black</item>
    </style>

    <style name="PreferencesListViewStyle" parent="@android:style/Widget.DeviceDefault.ListView">
        <item name="android:divider">@color/green</item>
        <item name="android:dividerHeight">1dp</item>
        <item name="android:background">@color/beige</item>
    </style>

    <style name="ListActivitiesStyle" parent="@style/AppThemeWithGreenActionBar">
        <item name="android:listViewStyle">@style/ListActivitiesListViewStyle</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textColorSecondary">@android:color/black</item>
    </style>

    <style name="ListActivitiesListViewStyle" parent="@android:style/Widget.DeviceDefault.ListView">
        <item name="android:divider">@color/green</item>
        <item name="android:dividerHeight">1dp</item>
        <item name="android:background">@color/beige</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:scrollbarStyle">outsideOverlay</item>
    </style>

</resources>