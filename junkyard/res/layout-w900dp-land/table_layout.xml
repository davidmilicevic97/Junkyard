<?xml version="1.0" encoding="utf-8"?>
<!-- Isti je kao u layout, ali sam morao da iskopiram ovde da ne bi uzeo iz layout-land -->
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/locationsFragmentScrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <TableRow android:padding="5dp" >

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <ImageView
                    android:id="@+id/imageVeiwNearest"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:scaleType="centerInside" />

                <TextView
                    android:id="@+id/tvNearest"
                    style="@style/GridStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|bottom"
                    android:padding="12dp"
                    android:text="@string/locationsfragment_nearest" />
            </FrameLayout>
        </TableRow>

        <TableRow android:padding="5dp" >

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <ImageView
                    android:id="@+id/imageVeiwFavs"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:scaleType="centerInside" />

                <TextView
                    android:id="@+id/tvFavs"
                    style="@style/GridStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|bottom"
                    android:padding="12dp"
                    android:text="@string/locationsfragment_favs" />
            </FrameLayout>
        </TableRow>

        <TableRow android:padding="5dp" >

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <ImageView
                    android:id="@+id/imageVeiwList"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:scaleType="centerInside" />

                <TextView
                    android:id="@+id/tvList"
                    style="@style/GridStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|bottom"
                    android:padding="12dp"
                    android:text="@string/locationsfragment_list" />
            </FrameLayout>
        </TableRow>

        <TableRow android:padding="5dp" >

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <ImageView
                    android:id="@+id/imageVeiwMap"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:scaleType="centerInside" />

                <TextView
                    android:id="@+id/tvMap"
                    style="@style/GridStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|bottom"
                    android:padding="12dp"
                    android:text="@string/locationsfragment_map" />
            </FrameLayout>
        </TableRow>
    </TableLayout>

</ScrollView>